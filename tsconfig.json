{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "features/*": ["features/*"],
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "services/*": ["services/*"],
      "states/*": ["states/*"],
      "types/*": ["types/*"],
      "constants/*": ["constants/*"],
      "hooks/*": ["hooks/*"]
    },
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],

    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src"]
}
